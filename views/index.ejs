<%-include("partials/header")%>
<div class="ui main text container">
	<div class="ui huge hader">Blog App</div>
	<div class="ui top attached segment">
		<div class="ui divided item">
			<% blogs.forEach(function(blog) { %>
				<div class="ui items">
				  <div class="item">
				    <div class="image">
				      <img src="<%=blog.image%>">
				    </div>
				    <div class="content">
				      <a class="header"><%=blog.title%></a>
				      
				      <div class="meta">
				        <span><%= blog.created.toDateString() %></span>
				      </div>
				      
				      <div class="description">
				        <p><%- blog.body.substring(0,100)%>...</p>
				      </div>
				      
				      <div class="extra">
				        <a class="ui basic blue button" href="/blogs/<%= blog._id%>">Read More</a>
				      </div>
				    </div>
				  </div>
			<% }) %>		
		</div>
	</div>
</div>
<%-include("partials/footer")%>


