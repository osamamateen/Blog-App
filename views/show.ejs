<%- include("partials/header")%>

<div class="ui main text container segment">
	<div class="ui huge header"><%= blog.title%></div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui centered rounded image" src=" <%= blog.image %>">
			<div class="content push-down">
				<span><%= blog.created.toDateString() %></span>
			</div>
			<div class="description">
				<p><%- blog.body%></p>
			</div>
			<a class="ui primary basic button push-down" href="/blogs/<%=blog._id%>/edit">Edit</a>
			<form class="push-down" method="POST" action="/blogs/<%=blog._id%>?_method=DELETE" id="delete">
				<input type="submit" value="Delete" class="ui red basic button">
			</form>
		</div>
	</div>
</div>
<%- include("partials/footer") %>