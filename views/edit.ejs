<%- include("partials/header")%>


<div class="ui main text container segment push-down">
	<div class="ui huge header">Edit <%= blog.title%></div>

	<form class="ui form" method="POST" action="/blogs/<%=blog._id%>?_method=PUT">

		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="title" value="<%=blog.title%>">
		</div>

		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="image" value="blog.image">
		</div>
		
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]"><%-blog.body%> </textarea>
		</div>


		<input type="submit" class="ui primary button">
	</form>

</div>

<%- include("partials/footer")%>